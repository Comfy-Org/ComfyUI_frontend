{
  "name": "@comfyorg/design-system",
  "version": "1.0.0",
  "description": "Shared design system for ComfyUI Frontend",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./tailwind-config": {
      "import": "./src/tailwind.config.ts",
      "types": "./src/tailwind.config.ts"
    },
    "./css/*": "./src/css/*"
  },
  "scripts": {
    "typecheck": "tsc --noEmit"
  },
  "nx": {
    "tags": [
      "scope:shared",
      "type:design"
    ]
  },
  "dependencies": {
    "@iconify-json/lucide": "^1.1.178",
    "@iconify/tailwind": "^1.1.3"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.17",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@10.17.1"
}
