{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "global.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.vue",
    "**/*.spec.ts",
    "**/*.test.ts",
    "src/components/**/*"
  ]
}
