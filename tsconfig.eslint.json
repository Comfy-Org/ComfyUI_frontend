{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    /* Test files should not be compiled */
    "noEmit": true,
    // "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true
  },
  "include": [
    "*.ts",
    "*.mts",
    "*.config.js",
    "browser_tests/**/*.ts",
    "scripts/**/*.js",
    "scripts/**/*.ts",
    "tests-ui/**/*.ts"
  ]
}
